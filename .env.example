# Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=True
APP_ENV=development

# =============================================================================
# FOOTPRINT SCANNER - API CREDENTIALS
# =============================================================================

# GitHub Personal Access Token (increases rate limits)
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Stack Exchange API Key (increases daily quota)
# Register at: https://stackapps.com/apps/oauth/register
STACKOVERFLOW_KEY=

# =============================================================================
# FOOTPRINT SCANNER - SCRAPING CONFIGURATION
# =============================================================================

# Enable web scraping (disabled by default)
ENABLE_SCRAPING=false

# Require explicit user consent for scraping
REQUIRE_CONSENT=true

# Maximum concurrent requests
MAX_CONCURRENCY=2

# Requests per second
REQUESTS_PER_SECOND=0.5

# User agent for requests
USER_AGENT=cv-ai-footprint-scanner/1.0

# =============================================================================
# LEGACY API KEYS (for future integrations)
# =============================================================================

# OPENAI_API_KEY=your_openai_api_key_here
# LINKEDIN_API_KEY=your_linkedin_api_key_here

# API Configuration
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30

# OpenAI/LLM Settings (when integrated)
OPENAI_MODEL=gpt-3.5-turbo
MAX_TOKENS=1500
TEMPERATURE=0.7

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/utopiahire
# REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_FILE_SIZE_MB=10

# Security (for production)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here
