# Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=True
APP_ENV=development

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL)
# =============================================================================

# JWT Secret Key (MUST be changed in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION

# Encryption Key for file encryption (base64 encoded)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Secret Key for general app security
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# =============================================================================
# FOOTPRINT SCANNER - API CREDENTIALS
# =============================================================================

# GitHub Personal Access Token (increases rate limits)
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Stack Exchange API Key (increases daily quota)
# Register at: https://stackapps.com/apps/oauth/register
STACKOVERFLOW_KEY=

# =============================================================================
# FOOTPRINT SCANNER - SCRAPING CONFIGURATION
# =============================================================================

# Enable web scraping (disabled by default)
ENABLE_SCRAPING=false

# Require explicit user consent for scraping
REQUIRE_CONSENT=true

# Maximum concurrent requests
MAX_CONCURRENCY=2

# Requests per second
REQUESTS_PER_SECOND=0.5

# User agent for requests
USER_AGENT=cv-ai-footprint-scanner/1.0

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI API Key (for advanced features)
OPENAI_API_KEY=

# OpenRouter API Key (for DeepSeek R1 access)
OPENROUTER_API_KEY=

# LinkedIn API Key (when available)
LINKEDIN_API_KEY=

# Model Settings
OPENAI_MODEL=gpt-3.5-turbo
MAX_TOKENS=1500
TEMPERATURE=0.7

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# DATABASE CONFIGURATION (for future use)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/utopiahire

# Redis cache connection string
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file extensions
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.txt

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable audit logging
ENABLE_AUDIT_LOG=true

# Audit log retention days
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# PRODUCTION SECURITY CHECKLIST
# =============================================================================
# Before deploying to production:
# ✓ Change all default SECRET_KEY and JWT_SECRET values
# ✓ Generate and set ENCRYPTION_KEY
# ✓ Set DEBUG=False
# ✓ Configure proper DATABASE_URL with strong password
# ✓ Set up HTTPS/SSL certificates
# ✓ Configure firewall rules
# ✓ Enable audit logging
# ✓ Set up monitoring and alerts
# ✓ Review and restrict CORS origins in API
# ✓ Set up secret rotation schedule
